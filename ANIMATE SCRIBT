self.padding += 1
if self.padding >= 5:
    self.frame += 1
    if self.frame >5:
        self.frame = 1
    enemy = pygame.transform.rotate(pygame.transform.flip(pygame.image.load(full_path("/enemy1/enemy" + str(self.frame) +".png")),True,False),self.slope)
